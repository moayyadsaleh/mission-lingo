<!DOCTYPE html>
<html lang="en">
<head>
  <!-- ... your head content ... -->
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <h1>Articles: المقالات</h1>
  <div class="articles">
    <% articles.results.forEach(article => { %>
      <div class="article">
        <h2 class="zoomable" data-target="article-title"><%= article.title %></h2>
        <p class="zoomable" data-target="article-content"><%= article.content %></p>
        <div>
          <button class="zoom-button" id="zoom-in">Zoom In</button>
          <button class="zoom-button" id="zoom-out">Zoom Out</button>
        </div>
      </div>
    <% }); %>
  </div>
  <%- include('partials/footer') %>
</body>
<script src="script.js"></script>
</html>